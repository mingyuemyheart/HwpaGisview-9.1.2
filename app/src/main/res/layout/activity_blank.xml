<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BlankActivity">

    <Button
        android:id="@+id/btnTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="华为测试环境"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnProduce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="华为生产环境"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/btnTest"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv1"
        app:layout_constraintTop_toBottomOf="@+id/btnProduce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        android:text="温馨提示：由于华为服务器问题，测试环境和生产环境会偶尔有一个不能正常工作，两个环境上使用数据一致，测试时如有问题，可切换另一个继续测试！！！"
        android:textSize="14sp"
        android:lineSpacingExtra="2dp"/>

    <Button
        android:id="@+id/btnWA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="伟岸101"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/tv1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv2"
        app:layout_constraintTop_toBottomOf="@+id/btnWA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        android:text="温馨提示：101服务器为伟岸本地服务器，需要连接公司一段网路（APwifi不可使用），是否加载ugcv5瓦片数据已在程序内部逻辑判断！！！"
        android:textSize="14sp"
        android:lineSpacingExtra="2dp"/>

    <Button
        android:id="@+id/btnSYS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="上研所"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/tv2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>